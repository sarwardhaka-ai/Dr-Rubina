{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "destination": "/sitemap.xml"
      },
      {
        "source": "/bn",
        "destination": "/bn.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}